class Add{
    void add(int... ar)
    {   int sum =0;
        for(int i=0;i<ar.length-1;i++)
        {
            System.out.print(ar[i]+"+");
            sum = sum + ar[i];
        } 
           sum = sum +ar[ar.length-1];
           System.out.print(ar[ar.length-1]+"="+sum);
           System.out.println("");
    }
}

